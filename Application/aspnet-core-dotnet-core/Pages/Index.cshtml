@page
@model IndexModel
@{
    ViewData["Title"] = "ASP.NET Core 3.1 Application";
}

<h2>SQL in docker container sample</h2>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
        Application dates are generated in code and using time zone conversion.
    </div>
    <div class="col-sm-12">
        Database dates are converted in the database using the <a hreaf="https://learn.microsoft.com/en-us/sql/t-sql/queries/at-time-zone-transact-sql?view=sql-server-ver16">AT TIME ZONE</a> sql command.
    </div>
  </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Source</th>
            <th scope="col">UTC DateTime</th>
            <th scope="col">EST DateTime</th>
            <th scope="col">CET DateTime</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Application</td>
            <td>@ViewData["UTCDateTime"]</td>
            <td>@ViewData["ESTDateTime"]</td>
            <td>@ViewData["CETDateTime"]</td>
        </tr>
        <tr>
            <td>Database</td>
            <td>@ViewData["UTCDateTimeFromDB"]</td>
            <td>@ViewData["ESTDateTimeFromDB"]</td>
            <td>@ViewData["CETDateTimeFromDB"]</td>
        </tr>
    </tbody>
</table>
